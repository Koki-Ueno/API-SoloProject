{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true }],
    "no-console": 0,
    "quotes": [2, "single"]
  },
  "extends": ["eslint:recommended", "problems", "plugin:prettier/recommended"]
}
